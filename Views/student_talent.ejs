<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/Style/student_talent.css">
    <link rel="stylesheet" href="/Scripts/student_talent.js">
    <title>Talent Search</title>
</head>
<body>
<section>
    <!--for demo wrap-->
    <h1>Job Search Table</h1>
    <div class="tbl-header">
        <table>
            <thead>
            <tr>
                <th>Company Name</th>
                <th>Position</th>
                <th>Job Vacancy</th>
                <th>CTC</th>
                <th>Apply Status</th>
            </tr>
            </thead>
        </table>
    </div>
    <div class="tbl-content">
        <table>
            <tbody>
            <% jobList.forEach(vacancies =>{ %>
                <tr>
                    <td><%= vacancies.companyName %></td>
                    <td><%= vacancies.jobVacancy %></td>
                    <td><%= vacancies.position %></td>
                    <td><%= vacancies.ctc %></td>
                    <td><a href="/registration">Apply Now</a> </td>
                </tr>
            <% }) %>
            </tbody>
        </table>
    </div>
</section>

</body>
</html>